<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="container">
        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <div class="row">
                <% console.log(grams)
                grams.map(gram => { %>
                    <div class="instagram-pic col-md-3">
                        <a href="<%= gram.link %>" target="_blank">
                            <img src="<%= gram.images.standard_resolution.url %>" class="img-fluid" alt="gram image">
                        </a>
                        <div class="instagram-bar">
                            <div class="likes">
                                <span class="fas fa-heart"></span>
                                <%= gram.likes.count %>
                            </div>
                            <div class="comments">
                                <span class="fas fa-comment-alt"></span>
                                <%= gram.comments.count %>
                            </div>
                        </div>
                    </div>
                    <%  }); %>
            </div>
        </main>
        <footer>
            <% include ../partials/footer %>
        </footer>
    </div>

</body>

</html>